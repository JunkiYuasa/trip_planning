<h1 class="mb-4 text-center">管理者ログイン</h1>
<div class="w-50 mx-auto">

  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <%= render "admin/shared/error_messages", resource: resource %>

    <div class="form-group py-3">
      <h4>メールアドレス</h4>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="form-group pt-3">
      <h4>パスワード</h4>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control'  %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions btn">
      <%= f.submit "ログイン", class: "btn btn-warning" %>
    </div>
  <% end %>
  <div class="link my-5 ml-3 font-weight-bold"><%= link_to "TOP画面へ", root_path %></div>
</div>