<div class="row">
  <div class="btn col d-flex align-items-center">
    <%= link_to '戻る', "javascript:history.back()", class: "btn btn-secondary", data: { turbolinks: false } %>
  </div>
  <div class="btn col d-flex justify-content-end align-items-center">
    <%= link_to "削除", admin_category_path(@category), method: :delete, data: { confirm: "本当に削除しますか？" } , class: "btn btn-danger" %>
  </div>
</div>
<div class="w-50 mx-auto">
  <h1 class="mb-4 text-center">カテゴリー編集</h1>
  <div class="w-50">
    <%= render 'layouts/error_messages', model: @category %>
  </div>
  <%= form_with model: @category, url: admin_category_path do |f| %>

    <div class="form-group m-3">
      <h4>目的</h4>
      <div class="field d-flex flex-wrap">
        <%= f.collection_radio_buttons :purpose_id, @purposes, :id, :name do |purpose| %>
          <div class="mx-3 form-check form-check-inline">
            <%= purpose.radio_button class: "form-check-input" %>
            <%= purpose.label class: "form-check-label" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="form-group m-3">
      <h4>カテゴリー名</h4>
      <div class="field">
        <%= f.text_field :name, class: "form-control"  %>
      </div>
    </div>

    <div class="form-group mx-3 my-4">
      <%= f.submit "更新", class: "btn btn-success" %>
    </div>
  <% end %>
</div>