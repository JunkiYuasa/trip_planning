<div class="row">
  <div class="btn col d-flex align-items-center">
    <%= link_to '戻る', "javascript:history.back()", class: "btn btn-secondary", data: { turbolinks: false } %>
  </div>
  <div class="btn col d-flex justify-content-end align-items-center">
    <%= link_to "削除", admin_feature_genre_path(@feature_genre), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
  </div>
</div>
<div class="w-50 mx-auto">
  <h1 class="mb-4 text-center">特徴ジャンル編集</h1>
  <%= render 'layouts/error_messages', model: @feature_genre %>

  <%= form_with model: @feature_genre, url: admin_feature_genre_path do |f| %>

    <div class="m-3">
      <h4>特徴ジャンル名</h4>
      <%= f.text_field :name %>
    </div>

    <div class="form-group mx-3 my-4">
      <%= f.submit "更新", class: "btn btn-success" %>
    </div>

  <% end %>
</div>