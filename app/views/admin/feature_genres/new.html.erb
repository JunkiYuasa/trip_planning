<div class="btn"><%= link_to '戻る', "javascript:history.back()", class: "btn btn-secondary", data: { turbolinks: false } %></div>
<h1 class="mb-4 text-center">特徴ジャンル作成</h1>
<%= render 'layouts/error_messages', model: @feature_genre %>

<div class="w-50 mx-auto">
  <%= form_with model: @feature_genre, url: admin_feature_genres_path do |f| %>

    <div class="form-group m-3">
      <h4>特徴ジャンル名</h4>
      <div class="field">
        <%= f.text_field :name, class: "form-control"  %>
      </div>
    </div>

    <div class="form-group mx-3 my-4">
      <%= f.submit "作成", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
