<h1>投稿詳細</h1>

<div>
  <%= link_to user_path(@post.user) do %>
    <% if @post.user.image.attached? %>
      <%= image_tag @post.user.image, size: "50x50" %>
    <% else %>
      <%= image_tag "person", size: "50x50" %>
    <% end %>
    <%= @post.user.name %>
  <% end %>
  <span class="m-2"><%= @post.purpose.name %></span>
  <span class="m-2"><%= @post.category.name %></span>
  <span class="mx-4 my-2"><%= link_to "編集", edit_post_path(@post), class: "btn btn-success" %></span>
</div>
<h3><%= @post.name %></h3>
<% if @post.min_fee.present? || @post.max_fee.present? %>
  <div class="m-2">
    <% if @post.min_fee.present? %>
      ￥<%= @post.min_fee %>
    <% end %>
     ~
    <% if @post.max_fee.present? %>
      ￥<%= @post.max_fee %>
    <% end %>
  </div>
<% end %>
<h4><%= @post.title %></h4>
<div><%= @post.introduction %></div>
<div class="m-2">
  <% @post.images.each do |image| %>
    <div class="m-2 w-25 border">
      <%= image_tag image, size: "320x180" %>
    </div>
  <% end %>
</div>
<div class="d-flex flex-wrap">
  <% @post.features.each do |feature| %>
    <div class="m-2">
      <%= feature.name %>
    </div>
  <% end %>
</div>
<% if @post.site_url.present? %>
  <div>
    <%= link_to "サイトを見る", @post.site_url, target: '_blank', rel: 'noopener' %>
  </div>
<% end %>