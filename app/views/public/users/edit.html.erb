<div class="row">
  <div class="btn col d-flex align-items-center">
    <%= link_to '戻る', "javascript:history.back()", class: "btn btn-secondary", data: { turbolinks: false } %>
  </div>
  <div class="btn col d-flex justify-content-end align-items-center">
    <%= link_to "アカウントを削除する", withdrawal_path(@user), class: "btn btn-danger" %>
  </div>
</div>

<h1 class="mb-4 text-center">プロフィール編集</h1>
<%= render 'layouts/error_messages', model: @user %>

<%= form_with model: @user, url: user_path, method: :patch, local: true, class: 'form-horizontal' do |f| %>

  <div class="py-3">
    <div class="m-3" id="image-fields">
      <div class="py-2 images">
        <strong class="image-change d-flex align-items-center">
          <i class="toggle-icon fas fa-chevron-right"></i>
          <h4 class="mx-2">プロフィール画像の変更</h4>
        </strong>
      </div>
      <div class="image-form" style="display: none;">
        <div class="my-3" id="image-fields">
          <%= f.file_field :image, accept: "image/*" %>
          <div class="image-preview"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group py-3">
    <h4>ユーザーネーム</h4>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group py-3">
    <h4>メールアドレス</h4>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group py-3">
    <h4>紹介文</h4>
    <%= f.text_area :introduction, class: 'form-control' %>
  </div>

  <div class="form-group py-3">
    <%= f.submit "変更する", class: 'btn btn-success' %>
  </div>
<% end %>