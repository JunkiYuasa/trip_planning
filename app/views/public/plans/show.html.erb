<h1 class="m-4 text-center">プラン詳細</h1>

<div class="container text-center">
  <h3><%= @plan.name %></h3>
  <div class="m-2">
    <%= localize @plan.start_time, format: :long %>
     >
    <%= localize @plan.end_time, format: :long %>
  </div>
  <div class="m-2 d-flex align-items-center justify-content-center">
    <div style="width: 20px; height: 20px; border-radius: 50%; background-color: <%= @plan.plan_genre.color %>;"></div>
    <div class="m-2"><%= @plan.plan_genre.name %></div>
    <div style="width: 20px; height: 20px; border-radius: 50%; background-color: <%= @plan.plan_genre.color %>;"></div>
  </div>
  <div class="m-2"><%= @plan.address %></div>
  <% if @plan.post_url.present? %>
    <div class="link m-2">
      <%= link_to "参照元URL", @plan.post_url, target: '_blank', rel: 'noopener' %>
    </div>
  <% end %>
  <% if @plan.site_url.present? %>
    <div class="link m-2">
      <%= link_to "サイトURL", @plan.site_url, target: '_blank', rel: 'noopener' %>
    </div>
  <% end %>
  <div class="m-2"><%= @plan.remark %></div>

  <div class="m-2 d-flex justify-content-center">
    <div class="btn mx-4 my-2"><%= link_to "編集", edit_plan_path(@plan), data: { turbolinks: false }, class: "btn btn-success" %></div>
    <div class="btn mx-4 my-2"><%= link_to "削除", plan_path(@plan), method: :delete, data: { confirm: "本当に削除しますか？"} , class: "btn btn-danger"%></div>
  </div>
</div