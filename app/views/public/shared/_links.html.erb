<%- if controller_name != 'sessions' %>
  <div class="d-flex">
    <div class="link my-4 font-weight-bold"><%= link_to "ログイン画面へ", new_session_path(resource_name) %></div>
    <div class="link my-4 ml-4 font-weight-bold"><%= link_to "TOP画面へ", root_path %></div>
  </div>

<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="d-flex">
    <div class="link my-4 font-weight-bold"><%= link_to "新規登録画面へ", new_registration_path(resource_name) %></div>
    <div class="link my-4 ml-4 font-weight-bold"><%= link_to "TOP画面へ", root_path %></div>
  </div>

<% end %>
